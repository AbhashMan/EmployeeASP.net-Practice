
@{
    ViewData["Title"] = "user login";
    Layout = "~/Areas/Shared/_Layout.cshtml";
}


<form>

    <div class="justify-content-center" id="LoginDiv">
        <div class="form-group">
            <label for="Username">ID *</label>
            <input type="text" class="form-control form-control-sm col-3" id="Username" data-bind="value:Username" placeholder=" Input Username">
        </div>
        <div class="form-group">
            <label for="Password">Name *</label>
            <input type="password" class="form-control form-control-sm col-3" placeholder="Input Password" data-bind="value: Password" id="Password">
        </div>
        

        <hr class="my-1" />
        <div class="form-group row  mt-2 justify-content-center">
            <div class="form-group row col-3 mt-2">
                <label></label>
                <button class="btn btn-info col-10" id="Login" data-bind="click: Login">Login</button>
            </div>
            <div class="form-group row col-3 mt-2">
                <label></label>
                <button class="btn btn-cancel col-10" id="Cancel" data-bind="click: cancel">Cancel</button>
            </div>
           
        </div>
    </div>
</form>




@section Scripts{
        <script src="/scripts/Login.js"></script>
}