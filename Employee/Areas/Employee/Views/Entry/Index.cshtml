
@{
    ViewData["Title"] = "AddEmployee";
    Layout = "~/Areas/Shared/_Layout.cshtml";
}

<h1>Employee Entry</h1>


<form>

    <div class="justify-content-center" id="EmployeeDiv">
        <div class="form-group">
            <label for="EmpId">ID *</label>
            <input type="text" class="form-control form-control-sm col-3" id="EmpId" data-bind="value:EmpId" placeholder="EmpId">
        </div>
        <div class="form-group">
            <label for="EmpName">Name *</label>
            <input type="text" class="form-control form-control-sm col-3" placeholder="Input Name of Employee" data-bind="value: EmpName" id="EmpName">
        </div>
        <div class="form-group">
            <label for="EmpAge">Age *</label>
            <input type="text" class="form-control form-control-sm col-3" placeholder="Input Age of Employee" data-bind="value: EmpAge" id="EmpAge">
        </div>
        <div class="form-group">
            <label for="EmpDesignation">Designation *</label>
            <input type="text" class="form-control form-control-sm col-3" id="EmpDesignation"  data-bind="value: EmpDesignation" placeholder="Input Designation of Employee">
        </div>
        <div class="form-group">
            <label for="EmpDepartment">Department *</label>
            <input type="text" class="form-control form-control-sm col-3" id="EmpDepartment" data-bind="value: EmpDepartment" placeholder="Input Department of Employee">
        </div>

        <hr class="my-1" />
        <div class="form-group row  mt-2 justify-content-center">
            <div class="form-group row col-3 mt-2">
                <label></label>
                <button class="btn btn-info col-10" id="SaveEmployee" data-bind="click: SaveEmployee">Save</button>
            </div>
            <div class="form-group row col-3 mt-2">
                <label></label>
                <button class="btn btn-primary col-10" id="UpdateEmployee" data-bind="click: UpdateEmployee">Update</button>
            </div>
            <div class="form-group row col-3 mt-2">
                <label></label>
                <button class="btn btn-secondary col-10" id="DeleteEmployee" data-bind="click: DeleteEmployee">Delete</button>
            </div>
        </div>
    </div>
</form>


@section Scripts{
        <script src="/scripts/Employee.js"></script>
}